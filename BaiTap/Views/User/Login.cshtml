@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng Nhập</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <form class="user" method="post">
        <div class="card p-4 shadow" style="width: 350px;">
            <h3 class="text-center mb-4">Đăng Nhập</h3>
            <label for="username" class="form-label">Tên đăng nhập:</label>
            <input type="email" name="email" class="form-control mb-3" placeholder="Nhập tên đăng nhập">
            <label for="password" class="form-label">Mật khẩu:</label>
            <input type="password" name="passwordHash" class="form-control mb-3" placeholder="Nhập mật khẩu">
            <p style="color: red">@ViewBag.error</p>
            <button class="btn btn-primary w-100">Đăng nhập</button>
            <a href="~/User/Register" style="color: red " class="text-center">Đăng ký</a>
        </div>
    </form>
</body>
</html>
