﻿@model IEnumerable<BaiTap.Models.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Danh sách sản phẩm</h2>
<a href="~/Cart/AddToCart">Giỏ Hàng</a>
<div class="product-grid">
    @foreach (var item in Model)
    {
        <div class="product-card">
            <div class="product-image">
                <a href="@Url.Action("Detail", "Home", new { id = item.productId })">
                    @if (!string.IsNullOrEmpty(item.imageUrl))
                    {
                        <img src="@Url.Content(item.imageUrl)" alt="@item.productName">
                    }
                    else
                    {
                        <img src="~/images/no-image.png" alt="No Image">
                    }
                </a>
            </div>
            <div class="product-info">
                <h3>@item.productName</h3>
                <p class="price">
                    @if (item.discount > 0)
                    {
                        <span class="original-price">@($"{item.price:C}")</span>
                        <span class="discounted-price">@($"{(item.price - item.discount):C}")</span>
                    }
                    else
                    {
                        <span>@($"{item.price:C}")</span>
                    }
                </p>
                <a href="@Url.Action("Detail", "Home", new { id = item.productId })" class="btn btn-primary">Mua Ngay</a>
                <a href="@Url.Action("Index", "Home", new { id = item.productId })" class="btn btn-primary">Thêm</a>

            </div>
        </div>
    }
</div>

<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .product-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        background: #fff;
        text-align: center;
        padding: 15px;
    }

    .product-image img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .product-info h3 {
        font-size: 18px;
        margin: 10px 0;
    }

    .price {
        font-size: 16px;
        font-weight: bold;
        color: #ff6600;
    }

    .original-price {
        text-decoration: line-through;
        color: #999;
    }

    .discounted-price {
        color: #e60000;
        font-weight: bold;
    }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        margin-top: 10px;
        text-decoration: none;
        color: #fff;
        background: #007bff;
        border-radius: 5px;
    }

        .btn:hover {
            background: #0056b3;
        }
</style>
